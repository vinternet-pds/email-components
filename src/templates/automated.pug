extends ../layouts/automated.pug

append head
  link(href='stylesheets/automated.css' rel='stylesheet')

block header
  img(class='header__image' src='https://s3-eu-west-1.amazonaws.com/web1devci.email-components/images/header_ukp.png' width='600px', alt='UK Parliament')

block content
  tr
    td(align='center' valign='top' class='row')
      table(border='0' cellpadding='0' cellspacing='0' class='columns' width='100%')
        tr
          td(align='left' valign='top' width='100%' class='columns__full')
            p You are subscribed to {{ topic.name }} updates from Parliament.
  include ../components/divider.pug
  tr
    td(align='center' valign='top' class='row')
      table(border='0' cellpadding='0' cellspacing='0' class='columns' width='100%')
        tr
          td(align='left' valign='top' width='100%' class='columns__full')
            ul
              li
                a(href='{{ topic.change.url }}') {{ topic.change.title }}
              li {{ topic.change.pubDate }}
              li {{ topic.change.content }}
